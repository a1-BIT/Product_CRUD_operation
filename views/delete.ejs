    <div class="container body-content" >
        <br />
        <h2>Are you sure you want to delete this employee ?</h2>
        <hr />
        <form action="/delete" method="POST">
          <div class="form-horizontal">
            <div class="form-group">
              <label class="control-label col-md-2">Employee Id</label>
              <div class="col-md-3">
                <input type="text" name="txtid" class="form-control" readonly value="<%= employee.id %>" />
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2">Name</label>
              <div class="col-md-3">
                <input type="text" name="txtname" class="form-control" readonly value="<%= employee.name %>" />
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2">Gender</label>
              <div class="col-md-3">
                <input type="text" name="txtgender" class="form-control" readonly value="<%= employee.gender %>" />
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2">City</label>
              <div class="col-md-3">
                <input type="text" name="txtcity" class="form-control" readonly value="<%= employee.city %>" />
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2">salary</label>
              <div class="col-md-3">
                <input type="text" name="txtsalary" class="form-control" readonly value="<%= employee.salary %>" />
                <br />
                <br />
                <input type="submit" value="YES" class="btn btn-primary" />
                <br />
                <br />
                <a href="/">Back</a>
              </div>
            </div>
          </div>
        </form>
        <br />
        <hr />
        <footer>
          &copy; Admin
        </footer>
    </div>
</body>
</html>